{
    "name": "@iv/unity-batchmode-runner",
    "version": "0.0.1",
    "description": "Unity batchmode runner, that wraps Unity3D batchmode CLI handling stdout and stderr",
    "main": "dist/main.js",
    "bin": {
        "unity-batchmode-runner": "dist/main.js"
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "pb": "tsc -p tsconfig.build.json && publish",
        "exec": "tsc -p tsconfig.build.json && node ./dist/main.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest test/unit",
        "test:integration": "jest test/integration/*.integration.test.ts",
        "test:all": "jest"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/iveyalkin/unity-batchmode-runner.git"
    },
    "devDependencies": {
        "typescript": "^4.1.2",
        "jest": "^26.6.3",
        "ts-jest": "^26.4.4",
        "@types/node": "^14.14.31",
        "@types/jest": "^26.0.15"
    },
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE"
    ]
}